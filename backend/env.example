NODE_ENV=development
PORT=8080

MONGODB_URI=mongodb://localhost:27017/turf_project

JWT_ACCESS_SECRET=change_me_to_a_long_random_string
JWT_ACCESS_EXPIRES_IN=15m

# Refresh tokens (httpOnly cookie)
JWT_REFRESH_SECRET=change_me_to_a_long_random_string
JWT_REFRESH_EXPIRES_IN=30d

# QR scan tokens (optional; defaults to JWT_ACCESS_SECRET)
QR_SCAN_SECRET=
QR_SCAN_EXPIRES_IN=30d

# Comma-separated allowed origins for CORS. Example:
# CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
CORS_ORIGINS=http://localhost:3000

# Rate limit
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=200

# Razorpay (backend only)
RAZORPAY_KEY_ID=
RAZORPAY_KEY_SECRET=

# Email (optional; used to send booking confirmation after verified payment)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM="Turf Booking <no-reply@example.com>"


